# ============================================================================
# MyEzz User App - Environment Configuration
# Copy this file to .env and fill in your values
# ============================================================================

# Vite Environment Variables (must start with VITE_)

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_KEY=your_supabase_anon_key

# Unified Order API (Restaurant Backend)
VITE_UNIFIED_API_URL=http://localhost:3001
VITE_WEBSOCKET_URL=http://localhost:3001

# Legacy Rider Backend (deprecated - use unified API)
VITE_RIDER_BACKEND_URL=http://localhost:5000

# Razorpay Configuration
VITE_RAZORPAY_KEY=rzp_test_xxxxxxxxxxxxx

# Firebase Configuration (for auth)
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=

